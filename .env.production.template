# Production Environment Variables
# Copy this file to .env and fill in your actual values

# ===== Database Configuration =====
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_password_here_change_in_production
MONGO_DATABASE=blackbelt

# Database connection string (auto-constructed in docker-compose)
DATABASE_URL=mongodb://admin:your_secure_password_here@mongodb:27017/blackbelt?authSource=admin

# ===== Authentication & Security =====
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_change_in_production
SESSION_SECRET=your_super_secret_session_key_min_32_characters_change_in_production

# OAuth 2.0 (if using external authentication)
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URI=https://yourdomain.com/auth/callback

# ===== Email Configuration (SMTP) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Black Belt Consultoria

# ===== Application Configuration =====
NODE_ENV=production
PORT=3000

# Frontend branding
VITE_APP_TITLE=Black Belt Consultoria
VITE_APP_LOGO=https://files.manuscdn.com/user_upload_by_module/web_dev_logo/310519663180008591/HtZnCnjHPPapRywu.png

# ===== CORS Configuration =====
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ===== Rate Limiting =====
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100        # Max requests per window
RATE_LIMIT_AUTH_MAX=5     # Max auth requests per window

# ===== File Upload =====
MAX_FILE_SIZE=52428800    # 50MB in bytes
UPLOAD_DIR=./uploads

# ===== Monitoring & Logging =====
# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production

# Logging level
LOG_LEVEL=info  # debug, info, warn, error

# ===== Backup Configuration =====
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# ===== SSL/TLS Configuration =====
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# ===== Server Configuration =====
# For deployment scripts
SERVER_HOST=your_server_ip_or_domain
SERVER_USER=deploy
DEPLOY_PATH=/opt/blackbelt-platform
PRODUCTION_URL=yourdomain.com

# ===== Docker Hub (for CI/CD) =====
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_password_or_token

# ===== Notification Services =====
# Slack (optional - for deployment notifications)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ===== Feature Flags =====
ENABLE_REGISTRATION=false  # Disable public registration in production
ENABLE_API_DOCS=false      # Disable API documentation in production
ENABLE_DEBUG=false         # Disable debug mode in production

# ===== Multi-Tenant Configuration =====
DEFAULT_TENANT_ID=default
ENABLE_TENANT_ISOLATION=true

# ===== Session Configuration =====
SESSION_MAX_AGE=86400000   # 24 hours in milliseconds
SESSION_SECURE=true        # Require HTTPS for cookies
SESSION_SAME_SITE=strict   # CSRF protection

# ===== API Configuration =====
API_PREFIX=/api
API_VERSION=v1

# ===== Performance =====
NODE_OPTIONS=--max-old-space-size=4096  # Increase Node.js memory limit
